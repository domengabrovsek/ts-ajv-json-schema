{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2022",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/tests/**/*"
  ]
}